        <LinearLayout
            android:background="@drawable/white_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Type"
                    android:textColor="@color/appgreen"
                    android:layout_marginStart="12dp"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <Spinner
                    android:layout_marginStart="12dp"
                    android:id="@+id/eventspinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="@color/white"
                    android:drawSelectorOnTop="true"
                    />

                <View
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Light_Grey"
                    android:layout_marginStart="12dp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Purpose"
                    android:textColor="@color/appgreen"
                    android:layout_marginStart="12dp"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <Spinner
                    android:layout_marginStart="12dp"
                    android:id="@+id/eventPurpose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="@color/white"
                    android:drawSelectorOnTop="true"
                    />

                <View
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Light_Grey"
                    android:layout_marginStart="12dp"/>


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llotherpurpose"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purpose"
                    android:textColor="@color/appgreen"
                    android:layout_marginStart="12dp"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <EditText
                    android:layout_marginStart="12dp"
                    android:id="@+id/otherpurpose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:background="@color/Transparent"
                    android:hint="Enter purpose"
                    android:backgroundTint="@color/Black"
                    android:drawSelectorOnTop="true"
                    />

                <View
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Light_Grey"
                    android:layout_marginStart="12dp"/>


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llotherlocation"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="@color/appgreen"
                    android:layout_marginStart="12dp"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <EditText
                    android:layout_marginStart="12dp"
                    android:id="@+id/otherlocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:background="@color/Transparent"
                    android:hint="Enter location"
                    android:backgroundTint="@color/Black"
                    android:drawSelectorOnTop="true"
                    />

                <View
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Light_Grey"
                    android:layout_marginStart="12dp"/>


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lllocation"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="@color/appgreen"
                    android:layout_marginStart="12dp"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <Spinner
                    android:layout_marginStart="12dp"
                    android:id="@+id/locationSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="@color/white"
                    android:drawSelectorOnTop="true"
                    />

                <View
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Light_Grey"
                    android:layout_marginStart="12dp"/>


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llregion"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Region"
                    android:textColor="@color/appgreen"
                    android:layout_marginStart="12dp"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <Spinner
                    android:layout_marginStart="12dp"
                    android:id="@+id/regionspinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="@color/white"
                    android:drawSelectorOnTop="true"
                    />

                <View
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Light_Grey"
                    android:layout_marginStart="12dp"/>


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llarea"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Area"
                    android:textColor="@color/appgreen"
                    android:layout_marginStart="12dp"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <Spinner
                    android:layout_marginStart="12dp"
                    android:id="@+id/areaspinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="@color/white"
                    android:drawSelectorOnTop="true"
                    />

                <View
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Light_Grey"
                    android:layout_marginStart="12dp"/>


            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llbranch"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Branch"
                    android:textColor="@color/appgreen"
                    android:layout_marginStart="12dp"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <Spinner
                    android:layout_marginStart="12dp"
                    android:id="@+id/branchspinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="@color/white"
                    android:drawSelectorOnTop="true"
                    />

                <View
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Light_Grey"
                    android:layout_marginStart="12dp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/changeevent"
                android:layout_marginBottom="@dimen/dp_25"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/cancel"
                    android:layout_marginEnd="8dp"
                    android:layout_width="130dp"
                    android:layout_height="55dp"
                    android:background="@drawable/cancel">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:text="Change Event"
                        android:textColor="@color/Black"
                        android:textSize="17sp"
                        android:textStyle="bold" />



                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/schedule"
                    android:layout_marginStart="3dp"
                    android:layout_width="130dp"
                    android:layout_height="55dp"
                    android:background="@drawable/schedule">

                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Execute"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginStart="12dp"
                        android:textSize="17sp"
                        android:layout_gravity="center_vertical"/>



                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/afterchange"
                android:layout_marginBottom="@dimen/dp_25"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <RelativeLayout
                    android:id="@+id/continueee"
                    android:layout_marginStart="8dp"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:background="@drawable/schedule">

                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Continue"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginStart="12dp"
                        android:textSize="17sp"
                        android:layout_gravity="center_vertical"/>



                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>





    </LinearLayout>

</RelativeLayout>




